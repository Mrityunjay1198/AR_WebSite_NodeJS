<%- include('navbar'); %>
<div class="container">
<div class="row mt-5">
    <div class="col-md-9 m-auto">
        <div class="card card-body">
        <h1 class="text-center mb-3"> Brand Details</h1>
        <% include ./partials/messages %>
        <form action="/users/add_brand" method="POST" enctype="multipart/form-data">
          <div class="form-group">
            <label for="brandname">Brand Name</label>
            <input
              type="text"
              id="brandname"
              name="brandname"
              class="form-control"
              placeholder="Enter Name"
            />
          </div>
          
          <div class="form-group" >
            <label for="brandstatus">Status</label>
            <select class="custom-select" name="brandstatus">
            <option selected="stat">Select Status</option>
            <option value="Enabled">Enabled</option>
            <option value="Disabled">Disabled</option>
           </select>
            
      </div>

          <div class="form-group">
            <div class="col-md-6">
              <label for="exampleInputFile">Upload 3D Model</label>
              <span style="color: red;" id="status"></span>
              <input name="brandfile" accept="image/png, image/jpeg" type="file" class="form-control-file" id="brandfile" aria-describedby="fileHelp">
              <small id="fileHelp" class="form-text text-muted">choose .jpg, .jpeg, .png files only </small>
            </div>
          </div>
          
                                            
                
          <button type="submit" class="btn btn-primary btn-block">Submit</button>
        </form>
        </div>
      </div>
    </div>
  </div>
</div>
  <%- include('footer'); %>